{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "next-devtools": {
      "type": "local",
      "enabled": true,
      "command": ["npx", "-y", "next-devtools-mcp@latest"]
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "better-auth": {
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
      "enabled": true
    }
  },
  "permission": {
    "skill": {
      "*": "allow"
    }
  }
}
